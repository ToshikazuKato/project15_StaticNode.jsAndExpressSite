extends layout.pug

block content
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{prj.project_name}

        p.lead.text-light
          | #{prj.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each item in prj.technologies
            li #{item}

        a.button.expanded(href=`${prj.live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${prj.github_link}` target="_blank") GitHub Repo

    each src in prj.images_urls
      img.image(src=`${src}`)
